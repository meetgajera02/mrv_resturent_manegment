@model MRV_resturant.Models.ContectModel
@{
    ViewData["Title"] = "contact";
}
<link href="~/css/header.css" rel="stylesheet" />
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>CONTACT US</h1>
            </div>
        </div>
    </div>
</div>

<div class="contact mt-125">
    <div class="container">
        <div class="heading-title text-center">
            <center>
                <i><h2>Get In Touch For Any Query</h2></i>
            </center>

            <br />
            <br />
        </div>
        <table>
            <tr>
                <td>
                    <div class="col-12">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3677.487727678968!2d70.89827970000001!3d22.240303199999997!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959b4a660019ee9%3A0x3d6254f36ed0e794!2sRK%20University%20Main%20Campus!5e0!3m2!1sen!2sin!4v1705764825923!5m2!1sen!2sin" class="contact-map" allowfullscreen="" loading="lazy" title="iframe" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </td>
                <td>
                    <form id="basic-form" asp-action="Index" asp-controller="Contact" method="post">
                        <div class="wrap-input1000 validate-input m-t-50 m-b-35" data-validate="Enter Name">
                            <input class="input1000" type="text" placeholder="Your Name" name="Name" asp-for="Name" />
                        </div>

                        <div class="wrap-input1000 validate-input m-t-50 m-b-35" data-validate="Enter Your Email">
                            <input class="input1000" type="email" id="email" placeholder="Your Email" name="email" asp-for="Email" />
                        </div>

                        <div class="wrap-input1000 validate-input m-t-50 m-b-35" data-validate="Enter subject">
                            <input class="input1000" type="text" id="subject" placeholder="Your subject" name="subject" asp-for="Subject" />
                        </div>

                        <div class="wrap-input1000 validate-input m-t-50 m-b-35" data-validate="Enter message">
                            <textarea class="input1000" id="message" placeholder="Your message" name="message" asp-for="Message"></textarea>
                        </div>

                        <div>
                            <center><button class="btn2" type="submit" name="save">Send Message</button></center>
                        </div>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</div>
